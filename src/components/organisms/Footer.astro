  function setYear() {
    const copyrightTag = document.getElementById('copyright');
    const year = new Date().getFullYear();

    if (copyrightTag) {
      if (year - 2023 == 0) {
        copyrightTag.innerHTML = `&copy; ${year} Sindre Sauarlia`;
