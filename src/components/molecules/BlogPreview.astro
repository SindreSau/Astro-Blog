---
interface Props {
  image?: string | 'image';
  title?: string | 'title';
  abstract?: string | 'abstract';
  linkto?: string | 'linkto';
}

const { image, title, abstract, linkto } = Astro.props;
---

<li
  class='relative w-full col-span-4 duration-300 rounded-lg aspect-video md:aspect-square md:rounded-xl overflow-clip md:col-span-2 xl:col-span-1 md:hover:scale-[102%] group transition-card shadow-card md:hover:shadow-card-hover'>
  <a href={linkto} class='w-full aspect-square'>
    <!-- Image -->
    <img
      class='object-cover h-full w-full -z-10 filter brightness-[50%] md:group-hover:brightness-[30%] grayscale-[20%] transition-[filter] will-change-transform'
      src={image}
      alt={title + '-image'}
    />

    <!-- Title + description -->
    <div class='absolute top-0 left-0 flex flex-col gap-3 md:gap-6 p-4 text-white md:p-6'>
      <h1 class='text-2xl md:text-3xl'>{title}</h1>

      <p
        class='text-sm md:text-lg transition-transform duration-200 md:translate-y-4 md:opacity-0 md:group-hover:translate-y-0 md:group-hover:opacity-100'>
        {abstract}
      </p>
    </div>
  </a>
</li>
