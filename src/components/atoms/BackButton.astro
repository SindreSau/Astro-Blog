<button data-back-button class={'hidden xl:fixed xl:flex gap-2 group items-center transition-transform'}>
  <svg
    class='w-6 xl:group-hover:-translate-x-2 transition-transform'
    xmlns='http://www.w3.org/2000/svg'
    viewBox='0 0 15 15'
    ><path
      fill='currentColor'
      fill-rule='evenodd'
      d='M2.05 13.5a.45.45 0 0 0 .9 0v-12a.45.45 0 1 0-.9 0v12Zm6.382-2.432a.45.45 0 1 0 .636-.636L6.586 7.95H14.5a.45.45 0 0 0 0-.9H6.586l2.482-2.482a.45.45 0 1 0-.636-.636l-3.25 3.25a.45.45 0 0 0 0 .636l3.25 3.25Z'
      clip-rule='evenodd'>
    </path>
  </svg>
  <div class='hidden 2xl:block text-lg'>Back</div>
</button>

<script>
  const backButtons = () => {
    console.log('Hello world');
    const buttons = document.querySelectorAll('[data-back-button]');

    buttons.forEach((button) =>
      button.addEventListener('click', () => {
        window.history.back();
      })
    );
  };

  backButtons();

  document.addEventListener('astro:after-swap', backButtons);
</script>
