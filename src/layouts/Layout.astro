---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/organisms/Header.astro';

const { title, activeNav } = Astro.props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>

    <!-- Google fonts -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;0,800;0,900;1,400;1,500;1,600;1,700;1,800;1,900&display=swap'
      rel='stylesheet'
    />

    <ViewTransitions />
    <script is:inline src='/toggle-theme.js'></script>
  </head>
  <body class='bg-background relative'>
    <!-- Header -->
    <Header activeNav={activeNav} client:load />

    <!-- Main -->
    <main id='main-content' class='container mx-auto px-6 pt-24 md:pt-48'>
      <slot />
    </main>

    <!-- Footer -->
    <footer class='h-24 border-t border-muted'></footer>
  </body>
</html>
