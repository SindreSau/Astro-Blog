---
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Blog test using Astro' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>

    <!-- Global CSS -->
    <link rel='stylesheet' href='/src/styles/global.css' />

    <!-- Fonts -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap'
      rel='stylesheet'
    />

    <ViewTransitions />
  </head>
  <body transition:animate='none' transition:persist class='flex flex-col transition-colors duration-300 min-h-screen'>
    <!-- Header -->
    <Header transition:persist />

    <!-- Main content -->
    <main
      id='main'
      class='flex-1 bg-no-repeat bg-fixed bg-gradient-to-t dark:from-dark-darker dark:to-dark-background from-light-darker to-light-background dark:text-slate-100'>
      <div class='mt-20 container grow'>
        <slot />
      </div>
    </main>
  </body>
</html>
